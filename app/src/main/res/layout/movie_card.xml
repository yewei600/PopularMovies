<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_movie_poster_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/tv_poster_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_movie_poster_thumbnail"
                android:layout_alignLeft="@+id/iv_movie_poster_thumbnail"
                android:layout_alignRight="@+id/iv_movie_poster_thumbnail"
                android:layout_alignTop="@+id/iv_movie_poster_thumbnail"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:visibility="invisible" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>